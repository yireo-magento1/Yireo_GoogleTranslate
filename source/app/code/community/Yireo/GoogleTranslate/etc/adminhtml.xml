<config>
    <translate>
        <modules>
            <Yireo_GoogleTranslate>
                <files>
                    <default>Yireo_GoogleTranslate.csv</default>
                </files>
            </Yireo_GoogleTranslate>
        </modules>
    </translate>
    <acl>
        <resources>
            <admin>
                <children>
                    <catalog>
                        <children>
                            <googletranslate translate="title" module="googletranslate">
                                <title>Translate via GoogleTranslate</title>
                            </googletranslate>
                        </children>
                    </catalog>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <googletranslate translate="title" module="googletranslate">
                                        <title>GoogleTranslate Section</title>
                                    </googletranslate>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
</config>
