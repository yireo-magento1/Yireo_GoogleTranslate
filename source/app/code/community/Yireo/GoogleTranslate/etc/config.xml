<config>

    <modules>
        <Yireo_GoogleTranslate>
            <version>0.2.5</version>
        </Yireo_GoogleTranslate>
    </modules>

    <global>
        <blocks>
            <googletranslate>
                <class>Yireo_GoogleTranslate_Block</class>
            </googletranslate>
        </blocks>

        <helpers>
            <googletranslate>
                <class>Yireo_GoogleTranslate_Helper</class>
            </googletranslate>
        </helpers>

        <models>
            <googletranslate>
                <class>Yireo_GoogleTranslate_Model</class>
            </googletranslate>
        </models>
    </global>

    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <googletranslate_controller_action_predispatch>
                        <type>singleton</type>
                        <class>Yireo_GoogleTranslate_Model_Observer</class>
                        <method>controllerActionPredispatch</method>
                    </googletranslate_controller_action_predispatch>
                </observers>
            </controller_action_predispatch>
            <core_block_abstract_to_html_before>
                <observers>
                    <googletranslate_add_html>
                        <type>singleton</type>
                        <class>Yireo_GoogleTranslate_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </googletranslate_add_html>
                </observers>
            </core_block_abstract_to_html_before>
        </events>

        <translate>
            <modules>
                <Yireo_BingTranslate>
                    <files>
                        <default>Yireo_BingTranslate.csv</default>
                    </files>
                </Yireo_BingTranslate>
            </modules>
        </translate>

        <layout>
            <updates>
                <googletranslate>
                    <file>googletranslate.xml</file>
                </googletranslate>
            </updates>
        </layout>

        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <googletranslate translate="title" module="googletranslate">
                                            <title>GoogleTranslate Section</title>
                                        </googletranslate>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <admin>
        <routers>
            <googletranslate>
                <use>admin</use>
                <args>
                    <module>Yireo_GoogleTranslate</module>
                    <frontName>googletranslate</frontName>
                </args>
            </googletranslate>
        </routers>
    </admin>

    <default>
        <catalog>
            <googletranslate>
                <buttonlabel>GoogleTranslate from $FROM to $TO</buttonlabel>
                <bork>0</bork>
            </googletranslate>
        </catalog>
    </default>
</config>
